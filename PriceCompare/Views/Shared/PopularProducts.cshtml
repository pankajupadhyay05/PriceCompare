@model IEnumerable<PriceCompare.Models.Product>

@foreach (var product in Model)
{
    <div class="grid-item">
		<a href="@Url.Action("Index", new { controller = "Product", id = product.Id, title = product.Name.Replace(", "," ").Replace(" ", "-").ToLower() })" class="grid-icon"> <img src="@product.Picture.PictureUrl" alt="@product.Name Price in India">
		</a>
		<div class="grid-text">
			<a href="@Url.Action("Index", new { controller = "Product", id = product.Id, title = product.Name.Replace(", "," ").Replace(" ", "-").ToLower() })" class="grid-title">@product.Name - Compare Price</a>
		</div>
	</div>
}