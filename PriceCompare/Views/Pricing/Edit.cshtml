@model PriceCompare.Models.Retailer_Product_Price

@{
    ViewBag.Title = "Manage Pricing - Edit Template";
}

<link href="@Url.Content("~/uploadify/uploadify.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="contentHolder">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.Id)
            <div class="adminHeading">Edit >> Product >> Retailer >> Pricing</div>
            <div class="adminControls">
                <input type="submit" class="button" value="Save and Exit" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { onclick = "return confirm('Are you sure you wish to delete this article?');", @class = "button" })
            </div>
            <table width="99%" class="template">
                    <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.ProductId)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.ProductId)
                        @Html.ValidationMessageFor(model => model.ProductId)
                    </td>
                </tr>
                <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.RetailerId, "Retailer")
                    </td>
                    <td class="editor-field">
                        @Html.DropDownListFor(model => model.RetailerId, (IEnumerable<SelectListItem>)ViewBag.RetailerList, "---Choose a Retailer---")
                        @Html.ValidationMessageFor(model => model.RetailerId)
                    </td>
                </tr>
                <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.Price)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Price)
                        @Html.ValidationMessageFor(model => model.Price)
                    </td>
                </tr>
                <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.Offer)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Offer)
                        @Html.ValidationMessageFor(model => model.Offer)
                    </td>
                </tr>
                <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.Url)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Url)
                        @Html.ValidationMessageFor(model => model.Url)
                    </td>
                </tr>
                <tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr><tr></tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.FetchUrl)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.FetchUrl)
                        @Html.ValidationMessageFor(model => model.FetchUrl)
                    </td>
                </tr>
            </table>
    }
</div>