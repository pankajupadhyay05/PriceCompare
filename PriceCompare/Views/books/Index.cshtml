@model PriceCompare.Models.Category

<div class="contentHolder">
    <div class="breadCrumb">
         @Html.ActionLink("Home", "Index", "Home")&nbsp;>>&nbsp;Books Price in India
    </div>
    <div class="contentMainDiv">
        <div class="leftDiv">
            <div>
               <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
               <!-- Pricepan Left Side Ad -->
               <ins class="adsbygoogle"
                    style="display:inline-block;width:160px;height:600px"
                    data-ad-client="ca-pub-9061280781853186"
                    data-ad-slot="8788394715">
               </ins>
               <script>
                   (adsbygoogle = window.adsbygoogle || []).push({});
               </script>
            </div>
            <br />
            @{Html.RenderAction("RecentlyAdded", "Store");}
        </div>
        <div class="rightDiv">
            <div>
                <h2 style="font-weight:normal;">Find and Compare prices of best-selling books/authors across all major online retailers in India. Books on Pricepan are divided in two major categories: Fiction and Non-Fiction. Collection of books is already sorted for quality with best prices for books in India.</h2>
            </div>
            <br />
            <div class="mainCatDiv">
                @foreach (var cat in Model.SubCategories)
                {
                    <div class="catDiv">
                        <h2 style="text-transform:capitalize;">@Html.ActionLink(cat.Name, "genre", "books", new { title = cat.Name.ToLower() }, null)</h2>
                    </div>
                }
            </div>
            <div class="clear"></div>
            <div>
                @{Html.RenderAction("RecentlyAddedForCat", "Store", new { category = @Model.Name });}
            </div>
            <div class="clear"></div>
            <br /><br />
            <div class="disclaimer-bottom">
                <h3 class="disclaimer-head">Notes / Disclaimer</h3>
                <div class="disclaimer-text">
                <ul> 
                    <li>Prices mentioned above are the best (least) price available for each item across all stores. To get prices across all stores please select (click) a given books.</li> 
                    <li>Prices may vary from store to store and from place to place based on different tax rates.</li> 
                    <li>Prices shown above are with bill and warranty.</li> 
                    <li>In case of any issues or discrepancy please contact us.</li> 
                </ul>
                </div>
            </div>
            <div class="bottomAds">
                <div id="bottom-rectangle">
                     <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- Pricepan Homepage Bottom -->
<ins class="adsbygoogle"
     style="display:inline-block;width:728px;height:90px"
     data-ad-client="ca-pub-9061280781853186"
     data-ad-slot="4358195117"></ins>
<script>
    (adsbygoogle = window.adsbygoogle || []).push({});
</script>
                </div>
            </div>
        </div>
    </div>
    <div class="clear"></div>
</div>