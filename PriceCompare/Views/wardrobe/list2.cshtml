@model IEnumerable<PriceCompare.Models.women>
@helper Truncate(string input, int length)
    {
    if (input.Length <= length)
    {
            @input
    }
    else
    { 
        @input.Substring(0, length)<text>...</text>
    }
}

<div class="contentHolder">
    <div class="breadCrumb">
        @Html.ActionLink("Home", "Index", "Home") &nbsp;>>&nbsp;@Html.ActionLink("Wardrobe", "Index", "wardrobe")&nbsp;>>&nbsp;@Html.ActionLink("Womens", "womens", "wardrobe", new { id = "" },null)&nbsp;>>&nbsp;@ViewBag.TypeName
    </div>
    <h1 style="font-size:1.2em;">@ViewBag.TypeName Sorted Wardrobe Collection</h1>   
    <div class="contentMainDiv">
        <div class="leftDiv">
            <div id="leftList">
                <div class="leftListTitle">
                    <h3>Casual Wear</h3>
                </div>
                <div class="leftListItem">
                    <ul>
                        <li><a href="/wardrobe/womens/tops-tees">Tops and Tees</a></li>
                        <li><a href="/wardrobe/womens/shirts">Shirts</a></li>
                        <li><a href="/wardrobe/womens/western-dress">Western Dress</a></li>
                        <li><a href="/wardrobe/womens/skirts">Skirts</a></li>
                    </ul>
                </div>
            </div>
            <div id="leftList">
                <div class="leftListTitle">
                    <h3>Formal Wear</h3>
                </div>
                <div class="leftListItem">
                    <ul>
                        <li><a href="/wardrobe/womens/ethnic-dress">Ethnic Dress</a></li>
                        <li><a href="/wardrobe/womens/kurtis">Kurta and Kurtis</a></li>
                        <li><a href="/wardrobe/womens/pants">Pants and Trousers</a></li>
                        <li><a href="/wardrobe/womens/jeans">Jeans</a></li>
                    </ul>
                </div>
            </div>
            <br />
            <div>
               <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
               <!-- Pricepan Left Side Ad -->
               <ins class="adsbygoogle"
                    style="display:inline-block;width:160px;height:600px"
                    data-ad-client="ca-pub-9061280781853186"
                    data-ad-slot="8788394715">
               </ins>
               <script>
                   (adsbygoogle = window.adsbygoogle || []).push({});
               </script>
            </div>
        </div>
        <div class="rightDiv">
            <div style="border:1px solid #888;margin-bottom:6px;">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Pricepan Homepage Bottom -->
                <ins class="adsbygoogle"
                        style="display:inline-block;width:728px;height:90px"
                        data-ad-client="ca-pub-9061280781853186"
                        data-ad-slot="4358195117"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
            <div>
                <div class="bottomProducts" style="margin-top:0px;border:none;">
                    @foreach (var cloth in Model)
                    {
                        <div class="float">
                            <div class="imageInFloat">
                                <a href="@Url.Action("product", new { controller = "wardrobe", id = cloth.Id, title = cloth.Name.Replace(", "," ").Replace(" ", "-").ToLower() })"><img class="productImageLeft" alt="@cloth.Name" src="@cloth.Picture1" style="max-height:180px;" /></a>
                            </div>
                            <div>
                                @Truncate(cloth.Name, 30)
                            </div>
                            <div>
                                by @cloth.ClothingBrand.Name
                            </div>
                        </div>
                    }
                    <div class="clear"></div>
                </div>
            </div><br />
            @Html.Partial("Pagination2")
            <div class="clear"></div><br />
            <div class="bottomAds">
                <div id="bottom-rectangle">
                    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
