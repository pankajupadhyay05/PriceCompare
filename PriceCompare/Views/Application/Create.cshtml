@model PriceCompare.Models.Application

@{
    ViewBag.Title = "Manage Application Article - Add News Template";
}

<script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="contentHolder">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
            <div class="adminHeading">Add New Article Template</div>
            <div class="adminControls">
                <input type="submit" value="Save and Exit" class="button" />
                @Html.ActionLink("Back to List", "Index", null, new{ @class = "button" })
            </div>
            <table width="99%" class="template">
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.Date)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Date)
                        @Html.ValidationMessageFor(model => model.Date)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.Tag)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.Tag)
                        @Html.ValidationMessageFor(model => model.Tag)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.AppName)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.AppName)
                        @Html.ValidationMessageFor(model => model.AppName)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.ArticleName)
                    </td>
                    <td class="shortdesc">
                        @Html.EditorFor(model => model.ArticleName)
                        @Html.ValidationMessageFor(model => model.ArticleName)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Article Excerpt
                    </td>
                    <td class="shortdesc">
                        @Html.EditorFor(model => model.MetaDescription)
                        @Html.ValidationMessageFor(model => model.MetaDescription)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        ArticleImage URL
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.ArticleImage)
                        @Html.ValidationMessageFor(model => model.ArticleImage)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.ArticleContent)
                    </td>
                    <td class="text-editor">
                        @Html.EditorFor(model => model.ArticleContent)
                        @Html.ValidationMessageFor(model => model.ArticleContent)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.AppLink)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.AppLink)
                        @Html.ValidationMessageFor(model => model.AppLink)
                    </td>
                </tr>
            </table>
    }
    <br />
</div>