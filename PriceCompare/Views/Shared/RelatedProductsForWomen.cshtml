@model IEnumerable<PriceCompare.Models.women>
@helper Truncate(string input, int length)
    {
    if (input.Length <= length)
    {
            @input
    }
    else
    { 
        @input.Substring(0, length)<text>...</text>
    }
}

<div style="width:100%;border:2px #CCC inset;border-radius:8px;">
    <div style="margin:5px 0px 5px 5px;color:#4D8703;font-weight:bold;font-size:0.9em">Related Products</div>
    <div class="bottomProductsRelated">
        @foreach (var product in Model)
        {
            <div class="float">
                <div class="imageInFloat">
                    <a href="@Url.Action("product", new { controller = "wardrobe", id = product.Id, title = product.Name.Replace(", "," ").Replace(" ", "-").ToLower() })"><img class="productImageLeft" alt="@product.Name" src="@product.Picture1" /></a>
                </div>
                <div style="font-size:0.7em;">
                    @Truncate(product.Name, 30)
                </div>
                <div style="font-size:0.7em;">
                    by @product.ClothingBrand.Name
                </div>
            </div>
        }
        <div class="clear"></div>
    </div>
</div>